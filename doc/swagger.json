      "/api/v1/item": {
          "get": {
              "tags": [
                  "Master item"
              ]
          },
          "post": {
              "tags": [
                  "Master item"
              ]
          }
      },
      "/api/v1/itemnull": {
          "get": {
              "tags": [
                  "Master item"
              ]
          }
      },
      "/api/v1/item/:id": {
          "delete": {
              "tags": [
                  "Master item"
              ]
          },
          "get": {
              "tags": [
                  "Master item"
              ]
          }
      },
      "/api/v1/item/:item_id": {
          "put": {
