                    },
                    "examples": {
                      "success":{
                        "description": "example success get all data",
                        "value":[
                          {
                            "id": "1",
                          "name": "Java",
                          "priority": 3,
                          "tags": [
                            "Java",
                            "Programming"]
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
