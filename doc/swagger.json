  "components": {
      "parameters": {},
      "schemas": {
          "messages":{
            "type": "object",
            "properties": {
              "status": "success | warning | error",
              "message": "message from server"
            }
          },
          "items": {
              "type": "object",
              "properties": {
                  "Item_code": {
                      "type": "string",
                      "minLength": 1,
                      "maxLength": 10,
                      "required": false
                  },
                  "Item_category": {
                      "type": "string",
                      "required": false
                  },
                  "Item_Type": {
                      "type": "string",
                      "required": false
                  },
                  "SKU": {
                      "type": "string",
                      "required": true,
                      "maxLength": 50
                  },
                  "Name": {
                      "type": "string",
                      "required": false
                  },
                  "Description": {
                      "type": "string",
                      "required": false
                  },
                  "Uom": {
                      "type": "string",
                      "required": false
                  },
                  "Quantity": {
                      "type": "number",
                      "required": true,
                      "maxLength": 10
                  },
                  "tag_number": {
                      "required": true,
                      "type": "string",
                      "maxLength": 100
                  },
                  "Ref_Number": {
                      "required": true,
                      "type": "string"
                  }
              }
          }
      }
  }
